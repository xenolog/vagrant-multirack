# Configure logging
#log syslog { debug, trace, info, remote, warning, error, auth, fatal, bug };
log stderr all;
#log "/var/log/bird/tor{{$rack_number}}.log" all;
# Override router ID
router id {{$TOR_ipaddr}};

# Turn on global debugging of all protocols
debug protocols all;

protocol kernel {
  learn;          # Learn all alien routes from the kernel
  persist;        # Don't remove routes on bird shutdown
  scan time 2;    # Scan kernel routing table every 2 seconds
  import all;
  export all;     # Default is export none
  merge paths;    # For ECMP in routing table
  graceful restart;
}

protocol direct {
  interface "*";         # For exclude the ARCnets, use "-arc*", "*"
  #check link yes;
}

# This pseudo-protocol watches all interface up/down events.
protocol device {
  scan time 2;    # Scan interfaces every 2 seconds
}

# session with master
protocol bgp 'master-{{$master_ipaddr}}' {
  local as {{$local_asnum}};
  neighbor {{$master_ipaddr}} as {{$master_asnum}};
  description "master";
  import all;
  export all;
  add paths;     # For ECMP in BGP session with TOR
  next hop self;
}

# sessions with nodes of my rack
{{ range $i := lsdir "/nodes" }} 
  {{ if eq (getv (printf "/nodes/%s/rack_no" $i)) $rack_number }}
protocol bgp 'node-{{$i}}' {
  local as {{$local_asnum}};
  neighbor {{getv (printf "/nodes/%s/ipaddr" $i)}} as {{$local_asnum}};
  description "node-{{$i}}";
  multihop;
  import all;
  export all;
  add paths;     # For ECMP in BGP session with TOR
  next hop self;
}
